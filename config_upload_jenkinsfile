pipeline {
    agent any

    stages {
        stage('Run GUI Automation') {
            steps {
                sh """
                    # run your automation script
                    ./venv/bin/python scripts/gui_upload.py
                """
            }
        }

        stage('Archive Screenshots') {
            steps {
                archiveArtifacts artifacts: 'debug_screenshots/**/*.*', fingerprint: true
            }
        }
    }
}
