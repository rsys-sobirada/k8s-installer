pipeline {
    agent any

    stages {
        stage('Run GUI Automation') {
            steps {
                sh """
                    # Activate venv and run your Python automation
                    ./venv/bin/python scripts/gui_upload.py
                """
            }
        }
    }

    post {
        always {
            // Collect screenshots + HTML captures from debug_screenshots/
            archiveArtifacts artifacts: 'debug_screenshots/**/*.*', fingerprint: true
        }
    }
}
